# Database
DATABASE_URL=postgresql://user:password@localhost:5432/raid_ledger

# Discord OAuth (get from Discord Developer Portal)
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_CALLBACK_URL=http://localhost:3000/auth/discord/callback

# JWT Authentication
JWT_SECRET=generate_a_strong_random_secret_here

# Frontend URL
CLIENT_URL=http://localhost:5173

# CORS Configuration
# Required in production (NODE_ENV=production)
CORS_ORIGIN=http://localhost:5173

# Optional: IGDB API (for game discovery)
# Pre-seeded with 48+ games - keys only needed for additional game search
# Get credentials from Twitch Developer Console: https://dev.twitch.tv/console
# IGDB_CLIENT_ID=your_twitch_client_id
# IGDB_CLIENT_SECRET=your_twitch_client_secret

# Admin Bootstrap (deploy scripts manage this automatically)
# ADMIN_PASSWORD=         # Set to use a specific password; leave empty for random

# Optional: Node environment
# NODE_ENV=development
